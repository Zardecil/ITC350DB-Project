CREATE VIEW login_view AS
SELECT username, password
FROM login_table;

CREATE VIEW characters_view AS
SELECT first_name, last_name
FROM characters_table;

CREATE VIEW character_info_view AS
SELECT first_name, last_name, hit_points, languages, traits, proficiencies, creation_date
FROM character_info_table;

CREATE VIEW race_view AS
SELECT race_name, subrace_name
FROM race_table;

CREATE VIEW class_view AS
SELECT class_name, subclass_name, class_level
FROM class_table;

CREATE VIEW action_view AS
SELECT action_name, action_data
FROM action_table;

CREATE VIEW background_view AS
SELECT background_name, background_items
FROM background_table;

CREATE VIEW ability_score_view AS
SELECT strength_score, dexterity_score, constituation_score, intelligence_score, wisdom_score, charisma_score
FROM ability_score_table;

CREATE VIEW skills_view AS
SELECT acrobatics_score, animal_handling_score, athletics_score, arcana_score, deception_score, history_score, insight_score, intimidation_score, investigation_score, medicine_score, nature_score, perception_score, religion_score, perception_score, sleight_of_hand_score, survival_score, stealth_score
FROM skills_table;
